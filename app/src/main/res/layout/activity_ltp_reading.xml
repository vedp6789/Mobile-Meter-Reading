<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFFA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:id="@+id/l_one"
        android:background="#000000"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/tv_consumer_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/ltp_con"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:hint="@string/ltp_con"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_Consumer_id_value"

            />

    </LinearLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l_one"
        android:id="@+id/l_two"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/l_two"
            android:id="@+id/l_odd"
            >
            <LinearLayout
                android:id="@+id/l_name"
                android:layout_below="@+id/l_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:text="@string/ltp_name"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_ltp_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/ltp_name"
                    android:id="@+id/tv_ltp_name_val" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_cgl"
                android:layout_below="@+id/l_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:text="@string/s_cgl"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_cgl" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/s_cgl"
                    android:id="@+id/tv_cgl_val" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_area"
                android:layout_below="@+id/l_cgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"

                    android:textColor="#FFFFFF"
                    android:text="@string/a_code"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_area_code" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/a_code"
                    android:id="@+id/tv_area_valid_code" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_divider"

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"

                    android:textColor="#FFFFFF"
                    android:text="@string/kw"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_kw" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="7"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/kw"
                    android:id="@+id/et_kw_val" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="@string/kva"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"


                    android:id="@+id/tv_kva" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:hint="@string/kva"
                    android:id="@+id/et_kva_val" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/l_three"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"

                    android:textColor="#FFFFFF"
                    android:text="@string/kwh"
                    android:textSize="25sp"
                    android:textStyle="normal"

                    android:id="@+id/tv_kwh" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:maxLength="7"
                    android:hint="@string/kwh"
                    android:id="@+id/et_kwh_val" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:layout_margin="2dp"
                android:id="@+id/l_six"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kvah"
                    android:background="#000000"
                    android:textColor="#FFFFFF"

                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_kvah" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/kvah"
                    android:id="@+id/et_kvah_val" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kvarh"
                    android:background="#000000"
                    android:textColor="#FFFFFF"

                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_kvarh" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/kvarh"
                    android:id="@+id/et_kvarh_val" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:layout_margin="2dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zone1"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_zone1" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/zone1"
                    android:id="@+id/et_zone1_val" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:layout_margin="2dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zone2"
                    android:background="#000000"
                    android:textColor="#FFFFFF"

                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_zone2" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/zone2"
                    android:id="@+id/et_zone2_val" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:layout_margin="2dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zone3"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_zone3" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:hint="@string/zone3"
                    android:id="@+id/et_zone3_val" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"

                android:layout_margin="2dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/meter_stat"
                    android:background="#000000"
                    android:textColor="#FFFFFF"

                    android:textSize="25sp"
                    android:textStyle="normal"

                    android:id="@+id/tv_meter_stat" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="wrap_content"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:background="@android:drawable/btn_dropdown"
                    android:id="@+id/sp_meter_stat_val"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:layout_margin="2dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remarks"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:background="#000000"
                    android:textColor="#FFFFFF"

                    android:id="@+id/tv_remark"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="wrap_content"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:background="@android:drawable/btn_dropdown"
                    android:id="@+id/sp_remark_val"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:layout_margin="2dp"

                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/met_type"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:background="#000000"
                    android:textColor="#FFFFFF"

                    android:id="@+id/tv_met_type"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:textColor="#000000"
                    android:textSize="25sp"

                    android:id="@+id/sp_meter_type"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rem"
                    android:background="#000000"
                    android:textColor="#FFFFFF"

                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:id="@+id/tv_rem" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textSize="20sp"
                    android:maxLength="100"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:hint="@string/rem"
                    android:id="@+id/et_rem_val" />

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:background="#000000"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:text="@string/commit"
                android:id="@+id/b_commit_reading"
                android:layout_gravity="center"/>


        </LinearLayout>


    </ScrollView>
</RelativeLayout>
